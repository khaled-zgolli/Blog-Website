<% posts.forEach(function(post){ %>
    <h1> <%= post.title %></h1>
    <p>
        <% if(post.content.length >100) { %>
        <%= post.content.substring(0,100) + "..." %> <a href="/posts/<%=post._id%>">Read More</a>
        <% } else { %>
        <%= post.content %>
        <% } %>
    </p>

    <% }); %>

    









